@model List<PaymentViewModel>

<table class="table table-hover" style="border-top: 1px solid #dee2e6; border-bottom: 1px solid #dee2e6;border-bottom: 1px solid #dee2e6; border-bottom: 1px solid #dee2e6; border-left: 1px solid #dee2e6; border-right: 1px solid #dee2e6">
    <thead class="table-warning">
        <tr>
            <th scope="col">Payment Type</th>
            <th scope="col">Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PaymentViewModel paymentViewModel in Model)
        {
            <tr>
                <td style="vertical-align: middle">@paymentViewModel.StringPaymentType</td>
                <td style="vertical-align: middle">@paymentViewModel.StringAmount</td>
            </tr>
        }
    </tbody>
</table>
<br />
<form method="post" id="formSubmit" data-ajax="true" data-ajax-method="Post" data-ajax-mode="replace" data-ajax-update="#paymentInput" asp-action="Save">
    <button type="submit" class="btn btn-warning btn-block" onclick="return confirm('Please confirm your submission.')"><i class="fas fa-money-check-alt"></i>&nbsp;&nbsp;&nbsp;Submit</button>
</form>
